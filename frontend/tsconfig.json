{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"vite.config.*",
		"vitest.config.*",
		"cypress.config.*",
		"nightwatch.conf.*",
		"playwright.config.*",
		"eslint.config.*"
	],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"composite": false,
		"incremental": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": ["node"],
		"noEmit": true
	}
}
